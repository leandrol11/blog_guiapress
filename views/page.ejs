    <body>
        <%- include ("partials/homeNavbar.ejs") %>
            <section class="container">
                <div class="jumbotron">
                    <% result.articles.rows.forEach(article=> { %>
                        <div class="article-home-list">
                            <h2>
                                <%= article.title %>
                            </h2>
                            <a href="/<%= article.slug %>" class="btn btn-success btn-home">Ver Artigo</a>
                        </div>
                        <% }) %>
                </div>
                <div class="prev-next">
                    <% if(result.page> 2) { %>
                        <a class="btn btn-primary" href="/articles/page/ <%= result.page - 1 %> ">Anterior</a>
                        <% } else if( result.page==2) { %>
                            <a class="btn btn-primary" href="/">Anterior</a>
                            <% } %>

                                <% if(result.next) { %>
                                    <a class="btn btn-primary"
                                        href="/articles/page/ <%= result.page + 1 %> ">Pr√≥ximo</a>
                                    <% } %>
                </div>
            </section>
    </body>

